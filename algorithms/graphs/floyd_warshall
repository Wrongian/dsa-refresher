# n is the number of vertices
def all_shortest(edges, n) -> int:
  dists = [[float("inf") for _ in range(n)] for _ in range(n)]

  # dist to self is 0
  for i in range(n):
    dists[i][i] = 0
  
  # add edges
  for u, v, w in edges:
    dists[u - 1][v - 1] = w
  
  for m in range(n):
    for i in range(n):
      for j in range(n): 
        dists[i][j] = min(dists[i][j], dists[i][m] + dists[m][j])

  return dists
